---
import type { Project } from "../data/site";

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="project-item">
  <h3 class="project-item__title">{project.title}</h3>
  <p class="project-item__description">{project.description}</p>
  <div class="project-item__links">
    {project.url && <a href={project.url} target="_blank" rel="noopener noreferrer">Portfolio</a>}
    {project.repoUrl && <a href={project.repoUrl} target="_blank" rel="noopener noreferrer">Source</a>}
  </div>
</div>
