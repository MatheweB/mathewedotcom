---
import { ViewTransitions } from "astro:transitions";
import { site } from "../data/site";
import Sidebar from "../components/Sidebar.astro";
import TopNav from "../components/TopNav.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
const pageTitle = title ? `${title} â€” ${site.meta.title}` : site.meta.title;
const pageDescription = description || site.meta.description;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={pageDescription} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={site.meta.siteUrl} />
    <meta name="theme-color" content="#fff" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#111" media="(prefers-color-scheme: dark)" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>
    <ViewTransitions />
    <script is:inline>
      const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
      document.documentElement.style.colorScheme = theme;
    </script>
  </head>
  <body>
    <div class="site-layout">
      <Sidebar />
      <div class="site-main">
        <TopNav />
        <main class="page-container" transition:animate="none">
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>

<script>
  import { initPhotoReveal } from '../scripts/photo-reveal';

  function applyTheme(root: HTMLElement, theme: string) {
    root.setAttribute('data-theme', theme);
    root.style.colorScheme = theme;
  }

  function initToggle(el: Element) {
    if (el.hasAttribute('data-initialized')) return;
    el.setAttribute('data-initialized', '');
    el.addEventListener('click', () => {
      const next = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
      applyTheme(document.documentElement, next);
      localStorage.setItem('theme', next);
    });
  }

  function updateNav() {
    const path = window.location.pathname;
    document.querySelectorAll('.topnav__link').forEach((link) => {
      const href = link.getAttribute('href');
      link.classList.toggle('topnav__link--active', path === href || path === href + '/');
    });
  }

  document.addEventListener('astro:before-swap', (e) => {
    const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    applyTheme((e as any).newDocument.documentElement, theme);
  });

  document.addEventListener('astro:after-swap', updateNav);

  document.addEventListener('astro:page-load', () => {
    const toggle = document.getElementById('theme-toggle');
    if (toggle) initToggle(toggle);

    const photo = document.getElementById('photo-reveal');
    if (photo) initPhotoReveal(photo);

    updateNav();
  });
</script>
